// Place your key bindings in this file to override the defaults
[
    // Split editor right
    { "key": "ctrl+\\", "command": "workbench.action.splitEditorRight", },
    // Split editor down
    { "key": "alt+\\", "command": "workbench.action.splitEditorDown", },
    // Clone editors in group
    { "key": "shift+ctrl+w", "command": "workbench.action.editorLayoutSingle", },
    // Select the next occurrence of the current word
    { "key": "ctrl+d", "command": "editor.action.addSelectionToNextFindMatch", },
    // Accept next word of inline suggestion
    { "key": "ctrl+l", "command": "editor.action.inlineSuggest.acceptNextWord", "when": "inlineSuggestionVisible && !editorReadonly" },

    { "key": "ctrl+alt+i", "command": "workbench.files.action.focusFilesExplorer", },

    // Close editor
    // { "key": "ctrl+w", "command": "workbench.action.closeActiveEditor", },
    // Focus next editor
    // { "key": "alt+right", "command": "workbench.action.nextEditor", },
    // Focus previous editor
    // { "key": "alt+left", "command": "workbench.action.previousEditor", },
]

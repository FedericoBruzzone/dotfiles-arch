// Place your key bindings in this file to override the defaults
[
    // Split editor right
    { "key": "ctrl+\\", "command": "workbench.action.splitEditorRight", },
    // Split editor down
    { "key": "alt+\\", "command": "workbench.action.splitEditorDown", },
    // Clone editors in group
    { "key": "shift+ctrl+w", "command": "workbench.action.editorLayoutSingle", },
    // Select the next occurrence of the current word
    { "key": "ctrl+d", "command": "editor.action.addSelectionToNextFindMatch", },
